<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityShoppingCart"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/mToolbar"/>

    <LinearLayout
        android:layout_below="@id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/margin_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_150dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/product_img"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp">

                    <com.paradise.shop.font.AzoSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pyramid organic wooden toys"
                        android:textSize="@dimen/textsize_17sp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:textColor="@color/colorDarkGray"/>

                    <com.paradise.shop.font.AzoSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250 Rs."
                        android:textSize="@dimen/textsize_18sp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/margin_15dp"
                    android:layout_height="@dimen/margin_15dp"
                    android:src="@drawable/ic_like"
                    android:layout_above="@id/rl_bottom"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginBottom="@dimen/margin_10dp"/>

                <RelativeLayout
                    android:id="@+id/rl_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp">

                    <ImageView
                        android:layout_width="@dimen/margin_15dp"
                        android:layout_height="@dimen/margin_15dp"
                        android:src="@drawable/ic_delete"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_10dp"
                            android:layout_height="@dimen/margin_10dp"
                            android:src="@drawable/ic_minus"
                            android:layout_gravity="center_vertical"/>

                        <com.paradise.shop.font.AzoSansTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:textSize="@dimen/textsize_15sp"/>

                        <ImageView
                            android:layout_width="@dimen/margin_10dp"
                            android:layout_height="@dimen/margin_10dp"
                            android:src="@drawable/ic_plus"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_10dp"/>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_150dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/product_image_two"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp">

                    <com.paradise.shop.font.AzoSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wooden verticle wishtle trumpet"
                        android:textSize="@dimen/textsize_17sp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:textColor="@color/colorDarkGray"/>

                    <com.paradise.shop.font.AzoSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350 Rs."
                        android:textSize="@dimen/textsize_18sp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/margin_15dp"
                    android:layout_height="@dimen/margin_15dp"
                    android:src="@drawable/ic_like"
                    android:layout_above="@id/rl_bottom"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginBottom="@dimen/margin_10dp"/>


                <RelativeLayout
                    android:id="@+id/rl_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp">

                    <ImageView
                        android:layout_width="@dimen/margin_15dp"
                        android:layout_height="@dimen/margin_15dp"
                        android:src="@drawable/ic_delete"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_10dp"
                            android:layout_height="@dimen/margin_10dp"
                            android:src="@drawable/ic_minus"
                            android:layout_gravity="center_vertical"/>

                        <com.paradise.shop.font.AzoSansTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:textSize="@dimen/textsize_15sp"/>

                        <ImageView
                            android:layout_width="@dimen/margin_10dp"
                            android:layout_height="@dimen/margin_10dp"
                            android:src="@drawable/ic_plus"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_10dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.paradise.shop.font.AzoSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : "
                android:textSize="@dimen/textsize_13sp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp">

                <com.paradise.shop.font.AzoSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="600 Rs."
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16sp"
                    android:layout_alignParentLeft="true"/>

                <com.paradise.shop.font.AzoSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligible for FREE SHIPPING!"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/textsize_16sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <com.paradise.shop.font.AzoSansButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:background="@color/colorBlack"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="CHECKOUT"
                android:textColor="@color/colorWhite"/>

            <com.paradise.shop.font.AzoSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share a product and win credit points"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_15sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>